<div class="container mt-5">
  <%= render 'client/shared/banner' %>

  <%= render 'client/shared/newsticker' %>
</div>
<div class="container container-mb">
  <div class="row gy-4 mb-2">
    <% @feedbacks.each do |feedback| %>
      <div class="col-12">
        <div class="card d-flex flex-row">
          <div class="card-img-left" style="width: 150px; height: 150px; overflow: hidden;">
            <% if feedback.image.present? %>
              <%= image_tag feedback.image.url, class: "img-fluid", style: "width: 100%; height: 100%; object-fit: cover;" %>
            <% else %>
              <div class="d-flex align-items-center justify-content-center bg-light" style="width: 150px; height: 150px;">
                <span>No Image</span>
              </div>
            <% end %>
          </div>

          <div class="card-body">
            <h6 class="card-title mb-2"><%= feedback.user.email[0] + feedback.user.email[1] + "*" * 3 + feedback.user.email.split('@').last %></h6>
            <p class="card-text"><%= feedback.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @feedbacks, theme: 'bootstrap-5', previous_label: "Previous", next_label: "Next", gap: 0, window: nil %>
</div>