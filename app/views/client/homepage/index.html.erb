<div class="container mt-5 container-mb">
  <%= render 'client/shared/banner' %>
  <%= render 'client/shared/newsticker' %>

  <div class="row mb-4">
    <div class="col-12">
      <h4 class="text-center mb-4">Winners Feedback</h4>

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @winners_feedback.each do |winner| %>
          <div class="col">
            <div class="card p-3 h-100 shadow-sm border-0 rounded-3 d-flex flex-column">
              <div class="d-flex justify-content-center align-items-center mb-3" style="height: 120px;">
                <% if winner.image.present? %>
                  <%= image_tag winner.image.url, class: "img-fluid d-block mx-auto", style: "max-width: 180px; max-height: 180px; object-fit: cover;" %>
                <% else %>
                  <div class="no-image-placeholder d-flex justify-content-center align-items-center" style="width: 120px; height: 120px; background-color: #f0f0f0; border: 1px solid #ddd;">
                    <span class="text-muted text-center">No Image</span>
                  </div>
                <% end %>
              </div>

              <div class="card-body d-flex flex-column justify-content-end text-center mt-auto">
                <p class="card-text text-muted mb-2"><%= winner.comment %></p>
                <p class="h6">
                  <strong><%= winner.user.email[0] + winner.user.email[1] + "*" * 3 + winner.user.email.split('@').last %></strong>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'More...', client_share_index_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <h4 class="text-center mb-4">Coming Soon</h4>

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @items.each do |item| %>
          <div class="col">
            <div class="card p-3 h-100 shadow-sm border-0 rounded-3">
              <div class="d-flex justify-content-center mb-3">
                <%= image_tag item.image.url, class: "img-fluid", size: "120x120" if item.image.present? %>
              </div>
              <div class="d-flex justify-content-center">
                <%= item.name %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'More...', client_lottery_index_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>
  </div>
</div>