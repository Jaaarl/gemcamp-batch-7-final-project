<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <div class="row align-items-center">
      <div class="col-md-2 text-center">
        <%= image_tag current_client_user.image.url, class: "rounded-circle border", alt: "Profile Picture", size: "60x60" if current_client_user.image.present? %>
        <% unless current_client_user.image.present? %>
          <img src="https://via.placeholder.com/60" class="rounded-circle border" alt="Profile Picture">
        <% end %>
      </div>
      <div class="col-md-10">
        <p class="mb-1"><strong>Username:</strong> <span id="username"><%= current_client_user&.username %></span></p>
        <p class="mb-1"><strong>Email:</strong> <span id="email"> <%= current_client_user.email %></span></p>
        <p><strong>Coins:</strong> <span id="coins"><%= current_client_user.coins || 0 %></span></p>
      </div>
    </div>

    <div class="text-center mt-4">
      <button class="btn btn-success btn-lg w-100">Cash In Now</button>
    </div>
    <div class="text-center mt-4 d-flex justify-content-between gap-2">
      <%= link_to 'Edit Profile', edit_client_user_registration_path, class: 'btn btn-success btn-lg flex-fill' %>
      <%= link_to 'Address', client_location_index_path, class: 'btn btn-success btn-lg flex-fill' %>
    </div>
  </div>
  <br>
  <ul class="nav nav-tabs d-flex justify-content-between">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">Order History</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Lottery History</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Winning History</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Invitation History</a>
    </li>
  </ul>
</div>