<%= render 'client/shared/navbar' %>
<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <div class="row align-items-center">
      <div class="col-md-2 text-center">
        <img src="https://via.placeholder.com/60" class="rounded-circle border" alt="Profile Picture">
      </div>
      <div class="col-md-10">
        <p class="mb-1"><strong>Username:</strong> <span id="username"><%= current_client_user&.username %></span></p>
        <p class="mb-1"><strong>Email:</strong> <span id="email"> <%= current_client_user.email %></span></p>
        <p><strong>Coins:</strong> <span id="coins"><%= current_client_user.coins || 0 %></span></p>
      </div>
    </div>

    <div class="text-center mt-4">
      <button class="btn btn-success btn-lg w-100">Cash In Now</button>
    </div>
    <div class="text-center mt-4 d-flex justify-content-between">
      <button class="btn btn-success btn-lg flex-fill mx-1">Edit Profile</button>
      <button class="btn btn-success btn-lg flex-fill mx-1">Address</button>
    </div>
  </div>
</div>
<%= render 'client/shared/footer' %>