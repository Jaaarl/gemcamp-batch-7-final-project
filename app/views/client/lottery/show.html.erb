<div class="container mt-4" style="min-height: 118vh;">
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <div class="ratio ratio-16x9 bg-secondary d-flex align-items-center justify-content-center text-white">
          Image cap
        </div>
      </div>

      <div class="mb-3">
        <div class="d-flex justify-content-between">
          <span>Item Name</span>
          <span id="progress-percentage">61%</span>
        </div>
        <div class="progress">
          <div id="progress-bar"
               class="progress-bar"
               role="progressbar"
               style="width: 61%;"
               aria-valuenow="61"
               aria-valuemin="0"
               aria-valuemax="100"></div>
        </div>
      </div>

      <div class="input-group mb-3" data-controller="counter">
        <button class="btn btn-outline-secondary" data-action="click->counter#decrement" type="button">-</button>
        <%= number_field_tag 'counter', 0,
                             class: 'form-control text-center',
                             id: 'counter-input',
                             min: 0,
                             data: { counter_target: 'input' } %>
        <button class="btn btn-outline-secondary" data-action="click->counter#increment" type="button">+</button>
      </div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-warning">Submit</button>
      </div>

      <div class="mb-3">
        <div class="d-flex flex-column">
          <div class="border p-2">Serial Number</div>
          <div class="border p-2">xxxxxxxxxxxx</div>
          <div class="border p-2">xxxxxxxxxxxx</div>
        </div>
      </div>
    </div>
  </div>
</div>