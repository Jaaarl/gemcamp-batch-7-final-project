<div class="container mt-5">
  <%= render 'client/shared/banner' %>
  
  <div class="row mb-4">
    <div class="col">
      <div class="alert alert-secondary text-center">
        Announcement
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <div class="row" id="product-grid">
      <% @offers.each do |offer| %>
        <div class="col-md-6 col-lg-3 mb-4 product-item">
          <%= link_to client_shop_path(offer), class: "card-link text-decoration-none" do %>
            <div class="card">
              <div class="card-body">
                <div class="card-img-top bg-light d-flex justify-content-center align-items-center" style="height: 150px;">
                  <% if offer.image.present? %>
                    <%= image_tag offer.image.url, style: "max-width: 100px; max-height: 100px; object-fit: cover;" if offer.image.present? %>
                  <% else %>
                    <span class="text-muted">No Image Available</span>
                  <% end %>
                </div>
                <h5 class="card-title mb-3 text-dark font-weight-bold"><%= offer.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>