<div class="container mt-4 container-mb">
  <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
      <%= link_to 'Login', new_client_user_session_path, class: 'nav-link active border border-white', id: 'tab-login', role: 'tab', aria: { controls: 'pills-login', selected: 'true' } %>
    </li>
    <li class="nav-item" role="presentation">
      <%= link_to 'Register', new_client_user_registration_path, class: 'nav-link border border-black', id: 'tab-register', role: 'tab', aria: { controls: 'pills-register', selected: 'false' } %>
    </li>
  </ul>
  <%= form_for(resource, as: resource_name, url: client_user_session_path(resource)) do |f| %>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form>
          <div data-mdb-input-init class="form-outline mb-4">
            <label class="form-label" for="loginName">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div data-mdb-input-init class="form-outline mb-4">
            <label class="form-label" for="loginPassword">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="row mb-4">
            <div class="col-md-6 d-flex justify-content-center">
            </div>
            <%= f.submit "Log in", class: 'btn btn-primary btn-block mb-4' %>
          </div>
        </form>
      </div>
    </div>
    </div>
  <% end %>