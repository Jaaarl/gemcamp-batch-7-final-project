<%= form_with model: @place, url: client_place_path(@place), method: :patch, data: { controller: :location } do |form| %>
  <% if @place.errors.any? %>
    <div class="error-summary">
      <h2>There were some problems with your submission:</h2>
      <ul>
        <% @place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :place_name %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, id: :place_phone_number %>
  </div>

  <div class="field">
    <%= form.label :remark %>
    <%= form.text_area :remark, id: :place_remark %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, options_for_select([['Home', :home], ['Work', :work]], @place.genre), prompt: "Select a genre" %>
  </div>

  <div class="field">
    <%= form.label :is_default %>
    <%= form.check_box :is_default %>
  </div>

  <div class="field">
    <%= form.label :address_region_id %>
    <%= form.collection_select :address_region_id,
                               Address::Region.all, :id, :name,
                               { prompt: 'Please select region',
                                 selected: @place.address_region_id },  # Pre-select the region
                               data: { location_target: 'selectedRegionId', action: 'change->location#fetchProvinces' } %>
  </div>

  <div class="field">
    <%= form.label :address_province_id %>
    <%= form.collection_select :address_province_id,
                               @place.address_region_id.present? ? @place.region.provinces : [],
                               :id, :name,
                               { prompt: 'Please select province',
                                 selected: @place.address_province_id },  # Pre-select the province
                               data: { location_target: 'selectedProvinceId', action: 'change->location#fetchCities' } %>
  </div>
  <div>
    <%= form.label :address_city_id %>
    <%= form.collection_select :address_city_id,
                               @place.address_province_id.present? ? @place.province.cities : [],
                               :id, :name,
                               { prompt: 'Please select city',
                                 selected: @place.address_city_id },  # Pre-select the city
                               data: { location_target: 'selectedCityId', action: 'change->location#fetchBarangays' } %>
  </div>

  <div>
    <%= form.label :address_barangay_id %>
    <%= form.collection_select :address_barangay_id,
                               @place.address_city_id.present? ? @place.city.barangays : [],
                               :id, :name,
                               { prompt: 'Please select barangay',
                                 selected: @place.address_barangay_id },  # Pre-select the barangay
                               data: { location_target: 'selectedBarangayId' } %>
  </div>

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, id: :place_street_address %>
  </div>

  <%= form.submit "Update Place" %>
<% end %>