<head>
  <title>System Management</title>
</head>
<body>
<%= render 'admin/shared/sidebar' %>

<div id="page-content-wrapper" class="w-100">
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid">
      <div class="ms-auto dropdown">
        <a class="text-decoration-none text-dark btn border-black">
          Change Language
        </a>
        <a class="text-decoration-none text-dark btn dropdown-toggle border-black" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          Username
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
          <li><a class="text-dark text-decoration-none btn btn-links" href="#">Profile</a></li>
          <li><%= button_to 'Sign out', destroy_admin_user_session_path, method: :delete, class: "text-dark text-decoration-none btn btn-links" %></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-4">
    <h1>Banner</h1>
    <%= link_to 'New Banner', new_admin_banner_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Online At</th>
          <th scope="col">Offline At</th>
          <th scope="col">Status</th>
          <th scope="col">Sort</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @banners.each do |banner| %>
          <tr>
            <td><%= image_tag banner.image.url, style: "max-width: 100px; max-height: 100px; object-fit: cover;" if banner.image.present? %></td>
            <td><%= banner.online_at %></td>
            <td><%= banner.offline_at %></td>
            <td><%= banner.status %></td>
            <td><%= banner.sort %></td>
            <td>
              <%= link_to 'Show', admin_banner_path(banner), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_admin_banner_path(banner), class: 'btn btn-primary' %>
              <%= button_to 'Delete', admin_banner_path(banner), method: :delete, class: 'btn btn-primary' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @banners, theme: 'bootstrap-5', previous_label: "Previous", next_label: "Next", gap: 0, window: nil %>
  </div>
</div>
</body>