<%= form_with(model: @banner, url: custom_url, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Banner.statuses.keys.map { |status| [status.humanize, status] }, selected: item.status), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :online_at, class: 'col-sm-2 control-label' %>
    <%= form.datetime_local_field :online_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :offline_at, class: 'col-sm-2 control-label' %>
    <%= form.datetime_local_field :offline_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :sort, class: 'col-sm-2 control-label' %>
    <%= form.number_field :sort, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "col-sm-2 form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <%= form.submit class: 'btn btn-success my-2' %>

<% end %>
<%= link_to 'Back', admin_news_ticker_index_path, class: 'btn btn-secondary' %>