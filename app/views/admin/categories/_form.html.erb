<%= form_with(model: @category, url: custom_url, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'col-sm-2 control-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :sort, class: 'col-sm-2 control-label' %>
    <%= form.number_field :sort, class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-success my-2' %>
<% end %>