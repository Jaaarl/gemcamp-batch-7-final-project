<head>
  <title>System Management</title>
</head>
<body>
<%= render 'admin/shared/sidebar' %>

  <h1>Category Details</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Category Information</h5>

      <div class="form-group">
        <strong>Name:</strong>
        <p><%= @category.name %></p>
      </div>
      <div class="form-group">
        <strong>Sort:</strong>
        <p><%= @category.sort %></p>
      </div>

      <%= link_to 'Back to List', admin_categories_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
</body>