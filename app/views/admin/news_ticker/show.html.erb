<head>
  <title>System Management</title>
</head>
<body>
<%= render 'admin/shared/sidebar' %>

  <h1>News Ticker Details</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Announcement</h5>

      <div class="form-group">
        <strong>Content:</strong>
        <p><%= @news_ticker.content %></p>
      </div>

      <div class="form-group">
        <strong>Status:</strong>
        <p><%= @news_ticker.status %></p>
      </div>

      <div class="form-group">
        <strong>Admin:</strong>
        <p><%= @news_ticker.admin.email %></p>
      </div>

      <div class="form-group">
        <strong>Sort:</strong>
        <p><%= @news_ticker.sort %></p>
      </div>

      <%= link_to 'Back to List', admin_news_ticker_index_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
</body>