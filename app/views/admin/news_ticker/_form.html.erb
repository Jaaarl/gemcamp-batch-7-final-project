<%= form_with(model: @news_ticker, url: custom_url, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(NewsTicker.statuses.keys.map { |status| [status.humanize, status] }, selected: item.status), {}, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-success my-2' %>

<% end %>
<%= link_to 'Back', admin_news_ticker_index_path, class: 'btn btn-secondary' %>