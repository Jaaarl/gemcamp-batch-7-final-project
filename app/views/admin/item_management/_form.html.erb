<%= form_with(model: @item, url: custom_url, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :minimum_tickets %>
    <%= form.number_field :minimum_tickets, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: 'form-control', readonly: true, disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :batch_count %>
    <%= form.number_field :batch_count, class: 'form-control', readonly: true, disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :online_at %>
    <%= form.datetime_local_field :online_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :offline_at %>
    <%= form.datetime_local_field :offline_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_at %>
    <%= form.datetime_local_field :start_at, class: 'form-control', readonly: true, disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Item.statuses.keys.map { |status| [status.humanize, status] }, selected: item.status), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>
  <div>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <%= b.check_box %>
      <%= b.label %>
    <% end %>
  </div>

  <%= form.submit class: 'btn btn-success my-2' %>
<% end %>
<%= link_to 'Back', admin_item_management_index_path, class: 'btn btn-secondary' %>