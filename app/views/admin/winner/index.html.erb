<head>
  <title>System Management</title>
</head>
<body>
<%= render 'admin/shared/sidebar' %>

<div id="page-content-wrapper" class="w-100">
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid">
      <div class="ms-auto dropdown">
        <a class="text-decoration-none text-dark btn border-black">
          Change Language
        </a>
        <a class="text-decoration-none text-dark btn dropdown-toggle border-black" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          Username
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
          <li><a class="text-dark text-decoration-none btn btn-links" href="#">Profile</a></li>
          <li><%= button_to 'Sign out', destroy_admin_user_session_path, method: :delete, class: "text-dark text-decoration-none btn btn-links" %></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-4">
    <h1>Winner</h1>
    <%= form_with(url: admin_winner_index_path, method: :get, local: true, class: 'container mt-4') do |form| %>
      <div class="row mb-3">
        <div class="col-md-4">
          <%= form.label :serial_number, 'Serial Number', class: 'form-label' %>
          <%= form.text_field :serial_number, value: params[:serial_number], class: 'form-control' %>
        </div>

        <div class="col-md-4">
          <%= form.label :item_name, 'Item Name', class: 'form-label' %>
          <%= form.text_field :item_name, value: params[:item_name], class: 'form-control' %>
        </div>

        <div class="col-md-4">
          <%= form.label :email, 'Email', class: 'form-label' %>
          <%= form.text_field :email, value: params[:email], class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <%= form.label :state, 'Winner State', class: 'form-label' %>
          <%= form.select :state, %w[pending won claimed submitted paid shipped delivered shared published remove_published],
                          include_blank: true,
                          selected: params[:state],
                          class: 'form-select' %>
        </div>

        <div class="col-md-4">
          <%= form.label :start_date, 'Start Date', class: 'form-label' %>
          <%= form.date_field :start_date, value: params[:start_date], class: 'form-control' %>
        </div>

        <div class="col-md-4">
          <%= form.label :end_date, 'End Date', class: 'form-label' %>
          <%= form.date_field :end_date, value: params[:end_date], class: 'form-control' %>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= form.submit 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th scope="col">Serial Number</th>
          <th scope="col">Winner email</th>
          <th scope="col">Item</th>
          <th scope="col">State</th>
          <th scope="col">Batch count</th>
          <th scope="col">Price</th>
          <th scope="col">Paid at</th>
          <th scope="col">Admin email</th>
          <th scope="col">Picture</th>
          <th scope="col">Comment</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @winners.each do |winner| %>
          <tr>
            <td><%= winner.ticket.serial_number  %></td>
            <td><%= winner.user.email %></td>
            <td><%= winner.item.name %></td>
            <td><%= winner.state %></td>
            <td><%= winner.ticket.batch_count %></td>
            <td><%= winner.price %></td>
            <td><%= winner.paid_at %></td>
            <td><%= winner.admin&.email %></td>
            <td><%= winner.picture %></td>
            <td><%= winner.comment %></td>
            <td>
              <%= button_to 'Submit', submit_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_submit? %>
              <%= button_to 'Pay', pay_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_pay? %>
              <%= button_to 'Ship', ship_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_ship? %>
              <%= button_to 'Deliver', deliver_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_deliver? %>
              <%= button_to 'Publish', publish_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_publish? %>
              <%= button_to 'Remove Publish', remove_publish_admin_winner_path(winner), method: :patch, class: 'btn btn-primary' if winner.may_remove_publish? %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>